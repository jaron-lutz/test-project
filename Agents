// Main Component - Export as default for Framer
export default function GeniusAICampaign() {
    const [activeAgents, setActiveAgents] = useState(new Set())

    const agents = [
        { id: 'marketing', name: 'Marketing', icon: TrendingUp, color: '#8B5CF6', description: 'Drive customer engagement' },
        { id: 'inventory', name: 'Inventory', icon: Car, color: '#14B8A6', description: 'Smart stock management' },
        { id: 'reporting', name: 'Reporting', icon: BarChart3, color: '#6366F1', description: 'Data-driven insights' }
    ]

    const toggleAgent = (id) => {
        const newActive = new Set(activeAgents)
        if (newActive.has(id)) {
            newActive.delete(id)
        } else {
            newActive.add(id)
        }
        setActiveAgents(newActive)
    }

    const allActive = activeAgents.size === agents.length
    const progressPercent = (activeAgents.size / agents.length) * 100

    return (
        <div style={{
            minHeight: '100vh',
            background: 'linear-gradient(to bottom, #0f172a, #1e293b)',
            color: '#fff',
            padding: '60px 20px',
            fontFamily: "'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
        }}>
            <style>{`
                @keyframes pulse {
                    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
                    50% { opacity: 1; transform: translate(-50%, -50%) scale(1.1); }
                }
                @keyframes rotate {
                    from { transform: rotate(0deg); }
                    to { transform: rotate(360deg); }
                }
            `}</style>

            {/* Hero Section */}
            <div style={{ maxWidth: '1200px', margin: '0 auto', textAlign: 'center', marginBottom: '80px' }}>
                <div style={{
                    display: 'flex',
                    flexDirection: 'column',
                    alignItems: 'center',
                    gap: '30px',
                    marginBottom: '30px'
                }}>
                    {/* Genius Atom Logo */}
                    <div style={{ position: 'relative' }}>
                        {allActive && (
                            <div style={{
                                position: 'absolute',
                                top: '50%',
                                left: '50%',
                                transform: 'translate(-50%, -50%)',
                                width: '200px',
                                height: '200px',
                                background: 'radial-gradient(circle, #fbbf2440 0%, transparent 70%)',
                                animation: 'pulse 2s ease-in-out infinite',
                                pointerEvents: 'none'
                            }} />
                        )}

                        <svg width="160" height="160" viewBox="0 0 100 100" style={{
                            filter: allActive ? 'drop-shadow(0 0 20px #fbbf24)' : 'none',
                            transition: 'all 0.5s ease'
                        }}>
                            <defs>
                                <linearGradient id="atomGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                    <stop offset="0%" stopColor={allActive ? "#fbbf24" : activeAgents.size > 0 ? "#8B5CF6" : "#334155"} />
                                    <stop offset="50%" stopColor={allActive ? "#f59e0b" : activeAgents.size > 0 ? "#14B8A6" : "#334155"} />
                                    <stop offset="100%" stopColor={allActive ? "#fbbf24" : activeAgents.size > 0 ? "#6366F1" : "#334155"} />
                                </linearGradient>
                                {/* Orbit 1 - Marketing (Purple) */}
                                <linearGradient id="orbit1" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" stopColor={activeAgents.has('marketing') ? (allActive ? "#fbbf24" : "#8B5CF6") : "#334155"} />
                                    <stop offset="100%" stopColor={activeAgents.has('marketing') ? (allActive ? "#f59e0b" : "#8B5CF6") : "#334155"} />
                                </linearGradient>
                                {/* Orbit 2 - Inventory (Teal) */}
                                <linearGradient id="orbit2" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" stopColor={activeAgents.has('inventory') ? (allActive ? "#fbbf24" : "#14B8A6") : "#334155"} />
                                    <stop offset="100%" stopColor={activeAgents.has('inventory') ? (allActive ? "#f59e0b" : "#14B8A6") : "#334155"} />
                                </linearGradient>
                                {/* Orbit 3 - Reporting (Indigo) */}
                                <linearGradient id="orbit3" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" stopColor={activeAgents.has('reporting') ? (allActive ? "#fbbf24" : "#6366F1") : "#334155"} />
                                    <stop offset="100%" stopColor={activeAgents.has('reporting') ? (allActive ? "#f59e0b" : "#6366F1") : "#334155"} />
                                </linearGradient>
                            </defs>

                            {/* Orbits */}
                            {/* Ring 1 - Marketing */}
                            <g style={{
                                transformOrigin: 'center',
                                animation: allActive ? 'rotate 20s linear infinite' : 'none'
                            }}>
                                <ellipse cx="50" cy="50" rx="35" ry="10" fill="none" stroke="url(#orbit1)" strokeWidth="2.5" opacity={activeAgents.has('marketing') ? 1 : 0.3} />
                            </g>
                            {/* Ring 2 - Inventory */}
                            <g style={{
                                transformOrigin: 'center',
                                animation: allActive ? 'rotate 15s linear infinite reverse' : 'none'
                            }}>
                                <ellipse cx="50" cy="50" rx="35" ry="10" fill="none" stroke="url(#orbit2)" strokeWidth="2.5" opacity={activeAgents.has('inventory') ? 1 : 0.3} transform="rotate(60 50 50)" />
                            </g>
