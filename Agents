                <p style={{
                    fontSize: '0.9rem',
                    color: '#64748b',
                    marginTop: '10px'
                }}>
                    {activeAgents.size} of {agents.length} Agents Activated
                    {allActive && <span style={{ color: '#fbbf24', marginLeft: '10px' }}>‚ö° FULL GENIUS UNLOCKED</span>}
                </p>
            </div>

            {/* Agent Grid */}
            <div style={{
                maxWidth: '1400px',
                margin: '0 auto',
                display: 'grid',
                gridTemplateColumns: 'repeat(auto-fit, minmax(280px, 1fr))',
                gap: '30px',
                marginBottom: '80px'
            }}>
                {agents.map((agent) => {
                    const isActive = activeAgents.has(agent.id)
                    const Icon = agent.icon

                    return (
                        <div
                            key={agent.id}
                            onClick={() => toggleAgent(agent.id)}
                            style={{
                                background: isActive
                                    ? 'linear-gradient(135deg, #1e293b 0%, #334155 100%)'
                                    : '#0f172a',
                                border: isActive
                                    ? `2px solid ${allActive ? '#fbbf24' : agent.color}`
                                    : '2px solid #1e293b',
                                borderRadius: '20px',
                                padding: '30px',
                                cursor: 'pointer',
                                transition: 'all 0.3s ease',
                                position: 'relative',
                                overflow: 'hidden',
                                boxShadow: isActive
                                    ? `0 10px 40px ${allActive ? '#fbbf2440' : agent.color + '40'}`
                                    : 'none'
                            }}
                            onMouseEnter={(e) => {
                                if (isActive) {
                                    e.currentTarget.style.transform = 'translateY(-5px)'
                                    e.currentTarget.style.boxShadow = `0 15px 50px ${allActive ? '#fbbf2460' : agent.color + '60'}`
                                }
                            }}
                            onMouseLeave={(e) => {
                                e.currentTarget.style.transform = 'translateY(0)'
                                e.currentTarget.style.boxShadow = isActive
                                    ? `0 10px 40px ${allActive ? '#fbbf2440' : agent.color + '40'}`
                                    : 'none'
                            }}
                        >
