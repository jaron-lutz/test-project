                            {isActive && (
                                <div style={{
                                    position: 'absolute',
                                    top: '-50%',
                                    left: '-50%',
                                    width: '200%',
                                    height: '200%',
                                    background: `radial-gradient(circle, ${allActive ? '#fbbf2420' : agent.color + '20'} 0%, transparent 70%)`,
