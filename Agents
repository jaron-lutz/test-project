                            }}>
                                <ellipse cx="50" cy="50" rx="35" ry="10" fill="none" stroke="url(#orbit3)" strokeWidth="2.5" opacity={activeAgents.has('reporting') ? 1 : 0.3} transform="rotate(120 50 50)" />
                            </g>

                            {/* Center core */}
                            <circle
                                cx="50"
                                cy="50"
                                r="8"
                                fill="url(#atomGradient)"
                                opacity={activeAgents.size === 0 ? 0.3 : 1}
                                style={{
                                    filter: allActive ? 'drop-shadow(0 0 10px #fbbf24)' : 'none',
                                    transition: 'all 0.5s ease'
                                }}
                            />
